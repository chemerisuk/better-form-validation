{
  "name": "better-form-validation",
  "description": "Form validation using better-dom",
  "version": "1.5.0",
  "author": "Maksim Chemerisuk",
  "license": "MIT",
  "homepage": "https://github.com/chemerisuk/better-form-validation",
  "repository": {
    "type": "git",
    "url": "https://github.com/chemerisuk/better-form-validation"
  },
  "keywords": [
    "ecosystem:better-dom",
    "better-forma-validation",
    "HTML5 form validation"
  ],
  "bugs": {
    "url": "https://github.com/chemerisuk/better-form-validation/issues"
  },
  "config": {
    "gulp": "--gulpfile node_modules/better-dom-boilerplate/gulpfile.js --cwd ."
  },
  "scripts": {
    "test": "gulp test $npm_package_config_gulp",
    "start": "gulp dev $npm_package_config_gulp",
    "version": "gulp dist $npm_package_config_gulp && git add -A dist bower.json",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "better-dom": ">=2.0.0"
  },
  "devDependencies": {
    "better-dom-boilerplate": "git://github.com/chemerisuk/better-dom-boilerplate.git"
  },
  "karmaFiles": [
    "bower_components/better-dom/dist/better-dom.js",
    "bower_components/better-i18n-plugin/dist/better-i18n-plugin.js",
    "bower_components/better-popover-plugin/dist/better-popover-plugin.js"
  ]
}
